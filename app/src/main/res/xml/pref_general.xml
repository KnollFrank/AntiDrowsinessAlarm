<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:defaultValue="0.15"
        android:inputType="numberDecimal"
        android:key="drowsyThreshold"
        android:summary="drowsyThreshold"
        android:title="drowsyThreshold" />

    <EditTextPreference
        android:defaultValue="500"
        android:inputType="number"
        android:key="slowEyelidClosureMinDuration"
        android:summary="slowEyelidClosureMinDuration"
        android:title="slowEyelidClosureMinDuration" />

    <EditTextPreference
        android:defaultValue="0.5"
        android:inputType="numberDecimal"
        android:key="eyeOpenProbabilityThreshold"
        android:summary="eyeOpenProbabilityThreshold"
        android:title="eyeOpenProbabilityThreshold" />

    <EditTextPreference
        android:defaultValue="0.08"
        android:inputType="numberDecimal"
        android:key="likelyDrowsyThreshold"
        android:summary="likelyDrowsyThreshold"
        android:title="likelyDrowsyThreshold" />

    <EditTextPreference
        android:defaultValue="15000"
        android:inputType="numberDecimal"
        android:key="timeWindow"
        android:summary="timeWindow"
        android:title="timeWindow" />

    <Preference
        android:key="reset"
        android:summary="reset to defaults"
        android:title="reset to defaults" />

</PreferenceScreen>
